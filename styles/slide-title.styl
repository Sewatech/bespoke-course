.title
  background-color #4D668D
  color #ffffff
  text-align center
  h1, h2
    margin 0.6 auto
    font-size 6rem
    font-weight bold
    border-bottom none
    background-image none
    text-align center
  h1
    padding 15rem 0 2rem 0
  h2
    padding 5rem 0 3rem 0
  .personname, .url
    display: none;
  ul, li
    margin 0
    padding 0
    list-style none
    list-style-image none
    line-height 5rem
    margin-bottom 0
  ul.col-2
    column-count: 2;
  footer.sw
    display none
  &:before
    content unset
  &:after  
    visibility hidden 
