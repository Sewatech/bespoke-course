.grid
  display: grid;
  column-gap: 5%
  row-gap: 20%
  align-items: start
  &.no-gap
    column-gap 0
    row-gap 0
  &.low-gap
    column-gap: 1%
    row-gap: 5%
  &.col-2
    grid-template-columns repeat(2, 1fr)
  &.col-3
    grid-template-columns repeat(3, 1fr)
  &.col-4
    grid-template-columns repeat(4, 1fr)
  &.col-2-third
    grid-template-columns 2fr 1fr

.align-top
  align-items flex-start
.align-bottom
  align-items flex-end

.full-screen
  position absolute
  z-index -1
  top 0
  left 0
  width 100%
  height 100%
  img
    width 100%
    height 100%
    object-fit contain

.background
  position absolute
  z-index -1
.foreground
  position absolute
  z-index 1

