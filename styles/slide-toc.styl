section#toc
  ul
    margin 0 10px
    padding 0
  li
    line-height 1.3
    a
      color $color-text
      display grid
      grid-template-columns auto minmax(5rem, max-content)
      text-decoration none

      span:nth-of-type(1)
        overflow hidden
        white-space nowrap
      span:nth-of-type(1):after
        margin-left 0.6rem
        content "...................................................................................................................................................................................................................."
      span:nth-of-type(2)
        text-align right
        overflow hidden
        margin-left 1rem
section.main
  h2
    width 90%
    margin 2rem auto
    font-size 6rem
    font-weight bold
    text-align center
    padding-top 12rem
