section
  &.hands-on-full
    background-image $hands-on-image
    background-position center center
    background-repeat no-repeat
    background-size 40%

  &.hands-on:after
    height $footer-height
    width $footer-height
    background-size $footer-height
    background-image $hands-on-image
    background-position bottom  
    background-repeat no-repeat

  aside[role=notes]
    .hands-on
      margin-top 3rem
      padding 0.3rem
      border solid 1px
      &::before
        content "Exercice"
        font-weight bold
        color #7a2717
      p
        margin 0
      li 
        margin 0