$screen-ratio-width = 16 unless $screen-ratio-width is defined
$screen-ratio-height = 9 unless $screen-ratio-height is defined
$screen-ratio = $screen-ratio-width / $screen-ratio-height

$color-text = #222222 unless $color-text is defined
$title-color-text = #ffffff unless $title-color-text is defined
$title-color-background = #4D668D unless $title-color-background is defined

$header-image = url(../images/logo/bespoke-course-lite.svg) unless $header-image is defined

$copyright = "" unless $copyright is defined
$footer-height = 7rem unless $footer-height is defined

$hands-on-image = url(../images/misc/hands-on.svg) unless $hands-on-image is defined
$hands-on-label = "Hands-on" unless $hands-on-label is defined

$base-font-size = 3rem unless $base-font-size is defined
$font-multiplier = 1.2  unless $font-multiplier is defined // Multiplier for big fonts, divider for small fonts
$source-font-size = 0.6 * $base-font-size unless $source-font-size is defined
$uml-font-size = 0.7 * $base-font-size unless $uml-font-size is defined
$table-font-size = 0.7 * $base-font-size unless $table-font-size is defined
$quote-font-size = 1.0 * $base-font-size unless $quote-font-size is defined
$admonition-font-size = 1.0 * $base-font-size unless $admonition-font-size is defined
$notes-multiplier = 0.7  unless $notes-multiplier is defined

$font-family-base = "Arial", sans-serif

$skip-classes = ".hide, .hidden" unless $skip-classes is defined

$print-border = solid 2px black unless $print-border is defined
