section.title
  background-color #4D668D
  color #ffffff
  text-align center
  h1, h2
    margin 0.6 auto
    font-size 6rem
    font-weight bold
    border-bottom none
    background-image none
    text-align center
  h1
    padding 15rem 0 2rem 0
  h2
    padding 5rem 0 3rem 0
  .personname, .url
    display: none;
  ul, li
    margin 0
    padding 0
    list-style none
    list-style-image none
    line-height 5rem
    margin-bottom 0
  ul.col-2
    column-count: 2;
  footer.sw
    display none
  &:before
    content unset
  &:after  
    visibility hidden 

section#speaker li
  font-size 3.5rem
  margin 2rem 0
  ul li
    font-size 2rem

section#toc
  ul
    margin 0 10px
    padding 0
  li
    line-height 1.1
    a
      color $color-text
      display grid
      grid-template-columns auto minmax(5rem, max-content)
      text-decoration none

      span:nth-of-type(1)
        overflow hidden
        white-space nowrap
      span:nth-of-type(1):after
        margin-left 0.6rem
        content "...................................................................................................................................................................................................................."
      span:nth-of-type(2)
        text-align right
        overflow hidden
        margin-left 1rem
section.main
  h2
    width 90%
    margin 2rem auto
    font-size 6rem
    font-weight bold
    text-align center
    padding-top 12rem

section
  &.hands-on-full
    background-image $hands-on-image
    background-position center center
    background-repeat no-repeat
    background-size 40%

  &.hands-on:after
    height $footer-height
    width $footer-height
    background-size $footer-height
    background-image $hands-on-image
    background-position bottom  
    background-repeat no-repeat

  aside[role=notes]
    .hands-on
      margin-top 3rem
      padding 0.3rem
      border solid 1px
      &::before
        content "Exercice"
        font-weight bold
        color #7a2717
      p
        margin 0
      li 
        margin 0

