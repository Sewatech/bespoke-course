// Must be declared before margin
set-width('') 
set-width('pre.source') 

set-margin('',top, 20) 
set-margin('.uml',top, 20) 
set-margin('.quote',top, 20) 
set-margin('pre.source',top, 20) 
set-margin('.level2',top, 20) 
set-margin('',left, 20) 
set-margin('.uml',left, 20) 
set-margin('pre.source',left, 20) 
set-margin('',right, 20) 
set-margin('.uml',right, 20) 
set-margin('pre.source',right, 20) 
set-margin('',bottom, 20) 
set-margin('.uml',bottom, 20) 
set-margin('pre.source',bottom, 20) 
set-margin('.level2',bottom, 20) 

.margin-left-auto
  margin-left: auto
.margin-right-auto
  margin-right: auto


set-padding('',top, 5)
set-padding('',right, 5)
set-padding('pre.source',right, 5)
set-padding('',bottom, 5)
set-padding('',left, 5)
.padding-left-0
  ul
    padding-left 0

set-position(top, 20) 
set-position(right, 20) 
set-position(left, 20) 
set-position(bottom, 20) 

.align-top
  align-items flex-start
.align-bottom
  align-items flex-end

.full-screen
  position absolute
  z-index -1
  top 0
  left 0
  width 100%
  height 100%
  img
    width 100%
    height 100%
    object-fit contain

set-zindex(20)

// legacy
.background
  position absolute
  z-index -1
.foreground
  position absolute
  z-index 1
.z-neg
  z-index: -100
.z-pos
  z-index: 100
