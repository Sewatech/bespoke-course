.uml
  background-color #cdcdcd
  fill #cdcdcd !important
  border solid 0.2rem grey
  width max-content
  margin 1rem 1rem
  -webkit-padding-start 0
  padding 0
  li
    text-align center
    padding 0
    margin 0
    span
      padding 0 1rem
    ul
      padding: 0
      li
        text-align left
        list-style-type none
        margin 0
        padding 0 1rem
        min-height 1rem
        border-bottom unset
        span
          padding 0
        &:first-child
          border-top solid 0.2rem grey
  img 
    vertical-align 0

table
  color #000000
  margin 1rem
  width 100% - 2rem
  p
    line-height 1.1
    margin 0
  thead tr th
    background-color #b3b3b3
    padding 0.4rem 0.2rem 0.6rem 1rem 
  tbody 
    tr:nth-child(odd)
      background-color: #cccccc
    tr:nth-child(even)
      background-color: #e6e6e6
    tr td
      padding: 0.4rem 0.2rem 0.4rem 1rem
  .halign-center
    text-align center
  .halign-left
    text-align left
  .halign-right
    text-align right

.not
  position: relative;
.not::after
  content: ""
  background-image: url('../images/misc/not.svg');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  top: 0
  left: 0
  position: absolute
  width: 100%
  height: 100%
  display: block

.admonitionblock
  table
    tr:nth-child(2n+1)
      background none
    td.icon
      text-align center
      width 100px
      [class^="fa icon-"]
        font-size 1.5em
        text-shadow 1px 1px 2px rgba(0,0,0,.5)
      .icon-note:before
        content "\f05a"
        color #19407c
      .icon-tip:before
        content "\f0eb"
        text-shadow 1px 1px 2px rgba(155,155,0,.8)
        color:#111
      .icon-warning:before
        content "\f071"
        color #bf6900
      .icon-caution:before
        content "\f06d"
        color #bf3400
      .icon-important:before
        content "\f06a"
        color #bf0000
    td.content
      padding-left 0.5em
      padding-right 0.5em
      border-left 1px solid #ddddd8
      color rgba(0,0,0,.6)

.conum[data-value]
  display inline-block
  color #fff !important
  background-color rgba(0,0,0,.8)
  -webkit-border-radius 100px
  border-radius 100px
  text-align center
  font-size .75em
  width 1.67em
  height 1.67em
  line-height 1.67em
  font-family "Open Sans","DejaVu Sans",sans-serif
  font-style normal
  font-weight bold
  &::after
    content attr(data-value)
  & + b
    display none
.colist
  table
    border 0
    background none
    tbody > tr
      background none
  td:not([class]):first-child
    padding .4em .75em 0
    line-height 1
    vertical-align top


.skip
  display none
  visibility hidden

{$skip-classes}
  display none
  visibility hidden
