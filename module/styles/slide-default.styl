body
  counter-reset page-number
  vertical-align top

h2
  font-weight bold
  padding 1rem 1rem
  margin  0 0 0.6rem 0
  border-bottom 0.3rem solid #888
  background-image $header-image
  background-position 95%  
  background-repeat no-repeat
  background-size auto 80%
  align-self end

/* Bullet points */
ul
  padding-left 2.5rem
  margin 0
  li
    margin 1.2rem 0 
    list-style-type none
    list-style-image none
  li:empty
    list-style none
  ol
    li
      margin 0.6rem 0 0 0 
      list-style-type decimal
  ul 
    li
      margin 0.6rem 0 0 0 
      list-style-type circle
      ul 
        li
          margin 0.3rem 0 0 0.6rem
          list-style-type: square
  &.level2 
    margin 0.6rem 0.5px 0.6rem 2.5rem
    li
      margin 0.6rem 0 0 0 
      list-style-type circle
    ul
      li
        margin 0.3rem 0 0 0.6rem
        list-style-type square

a
  color #2e2e2e

code
  color #707070

pre.source  
  margin 0.5rem 1rem
  border 0.1rem solid #888  
  background-color #fff6d1
  code
    padding 0.1rem 0.2rem
    // already in .hljs, useful when no language
    background-color #fff6d1
    display: block;
    overflow-x: auto;
    color: #000;
  &.blue
    background-color: #ccffff
    code
      background-color: #ccffff
  &.green
    background-color: #ccff00
    code
      background-color: #ccff00
  &.red
    background-color: #ffccff
    code
      background-color: #ffccff

  &.fit-content
    width: max-content
    padding-right: 2rem

.quote
  margin 3rem 5rem
  blockquote
    font-style italic
    margin 0
    p
      font-family "Noto Serif"
      letter-spacing 0.2rem
      line-height: 1.45;
      font-style: italic;
        // text-align justify
      &::before
        content: "\201c\00a0";
        font-weight: bold;
        color: #7a2717;
      &::after
        content "\00a0\201d";
        font-weight: bold;
        color: #7a2717;  
  figcaption
    margin-left 2rem
    cite
      color #666
      &::before
        content: " - "

section
  &:after
    counter-increment: page-number; 
    content counter(page-number)
    position absolute
    bottom 0.6rem
    right 0.6rem
    padding-right 1.5rem
    display flex
    align-items flex-end
    justify-content flex-end
  &:before
    content $copyright
    position absolute
    bottom 0.6rem
    left 0.6rem
  &.center *
    text-align center
    margin-left auto
    margin-right auto
  &.center h2
    text-align left
    margin-left 0
    margin-right 0
  &.center aside[role=notes] 
    text-align unset
    *
      text-align unset

  .center
    text-align center
    margin-left auto
    margin-right auto

.line-through
  text-decoration line-through
  text-decoration-thickness: 1px
  text-decoration-color: #a5a5a5
.underline
  text-decoration underline

h2:hover ~ aside[role=notes]
  display block
aside[role=notes]:hover
  display block

aside[role=notes]
  margin-top: 0
  ul
    padding-left 2rem
    margin-bottom: 0.75rem;
    li
      font-size 1.5rem
      line-height 1.8rem
      margin 0.3rem 0
      list-style-type square
      ul
        li
          font-size unset
  p ~ ul
    margin-top: 0
  ul.uml
    padding-left 0
    li
      list-style-type none
  pre.source
    code
      font-size 1rem

@media screen
  aside[role=notes]
    background-color #dfdfde
    position absolute
    top 0
    left 0
    z-index 100
    // font-size 1.5rem
    margin-top 8rem
    padding 10%
    padding-top 2rem
    height 100%
    width: 100%
    // table
    //   font-size 1rem
  .title aside[role=notes]
    background-color $title-color-background
    margin-top 15rem
    text-align left
    li
      line-height 1.5
    a
      color $title-color-text
