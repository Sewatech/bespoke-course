section, .grid
  display grid
  grid-template-columns auto
  grid-template-rows min-content repeat(10,min-content)
  align-items start
  row-gap 0
  column-gap 2rem

section
  &.title
    grid-template-rows 20rem
    h1
      padding 0
      align-self end
    h2
      padding 0
      align-self center
    header
      align-self center
      h3 
        margin 0

  &.title.chapter
    grid-template-rows 20rem repeat(100, auto)

.col-2
  grid-template-columns repeat(2, 1fr)
  h2
    grid-column: 1 / span 2;
.col-3
  grid-template-columns repeat(3, 1fr)
  h2
    grid-column: 1 / span 3;
.col-4
  grid-template-columns repeat(4, 1fr)
  h2
    grid-column: 1 / span 4;
.col-21
  grid-template-columns: 2fr 1fr
  h2
    grid-column: 1 / span 2

.gap-0
  column-gap 0
  row-gap 0
.gap-1
  column-gap 1rem
  row-gap 1rem
